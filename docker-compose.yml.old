version: '2'
services:
  web1:
    image: lbarman/prifi-demo:latest
    volumes:
      - ./scripts:/scripts:ro
      - ./prifi:/prifi
    environment:
      - STARTUPSCRIPT=/scripts/client.sh
      - WEBSITE=http://red.jwhite-srv.net
      - HOME=/home/ubuntu
      - SHELL=/bin/bash
      - TERM=xterm
    working_dir: /root
    privileged: true
    ports:
      - 8000:80
    links:
      - relay
  web2:
    image: lbarman/prifi-demo:latest
    volumes:
      - ./scripts:/scripts:ro
      - ./prifi:/prifi
    environment:
      - STARTUPSCRIPT=/scripts/client.sh
      - WEBSITE=https://www.youtube.com/watch?v=rDBbaGCCIhk&index=3&list=RDrVw5UUKKzM8
      - HOME=/home/ubuntu
      - SHELL=/bin/bash
      - TERM=xterm
    working_dir: /root
    privileged: true
    ports:
      - 8001:80
    links:
      - relay
  relay:
    image: lbarman/prifi-demo:latest
    volumes:
      - ./scripts:/scripts:ro
      - ./prifi:/prifi
    environment:
      - STARTUPSCRIPT=/scripts/relay.sh
      - HOME=/home/ubuntu
      - SHELL=/bin/bash
      - TERM=xterm
    working_dir: /root
    privileged: true
    ports:
      - 9000:80